    <!-- UiKit -->
    
    <!-- UIkit CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.5.5/dist/css/uikit.min.css" />
    
    <!-- UIkit JS -->
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.5.5/dist/js/uikit.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.5.5/dist/js/uikit-icons.min.js"></script>
</head>

<body>
    <%- include("headerDeslogueado") %>
    <% if (typeof user != "undefined" && user != null) { %>
        <h2>Hola: <%= user.Nombre %> </h2>
        <% } %>
    
        <h2> Bienvenido a Alkiline! </h2>
  

    <main>
      
        <div class="uk-section uk-section-small">
            <div class="uk-container uk-container-large uk-flex">
                <section id="posts" class="uk-flex uk-flex-middle uk-flex-center uk-flex-column uk-child-width-1-2 uk-width-1-1">
                    <ul>
                        <% for( let i = 0; i < posteos.length; i++) {%>
                            <li>
                                <article class="post uk-card-default uk-flex uk-flex-column">
                                    <div class="info-usuario uk-flex ">
                                        <div>
                                            <img src="https://via.placeholder.com/40" alt="">
                                        </div>
                                        <div><a href="/detalleUsuario/<%= posteos[i].Id_usuario%>"><%= posteos[i].Id_usuario%></a></div>
                                        
                                    </div>
                                    <div class="post-body uk-flex uk-flex-center">
                                        <img src="https://via.placeholder.com/500x600" alt="">
                                    </div>
                                    <div class="post-reacciones">
                                        <ul class="post-icons uk-flex uk-flex-between">
                                            <li><span class="" uk-icon="icon:heart; ratio: 1.3"></span>
                                            </li>
                                            <li><span class="" uk-icon="icon:comments; ratio: 1.3"></span>
                                            </li>
                                        </ul>
                                        <div class="post-pie uk-flex">
                                            <h5 class="uk-width-1-6"><%= posteos[i].Id_usuario%></h5>
                                            <p class="uk-width-5-6"><%= posteos[i].Texto_Posteo%></p>
                                        </div>
                                    </div>
                                    <div class="post-comentarios">
                                        <h6>Comentarios</h6>
                                        <ul>
                                            <li>
                                                <a href="">Usuario</a>
                                                <p>Comentario</p>
                                            </li>
                                            <li>
                                                <a href="">Usuario</a>
                                                <p>Comentario</p>
                                            </li>
                                            <a href="">Ver m√°s...</a>
                                        </ul>
                                    </div>
                                </article>
                                
                            </li>
                            <%}%>
                        
                        
                    </ul>
                    
                    
                    
        
                </section>

            </div>
        </div>
    </main>

    <footer class="uk-position-bottom uk-position-fixed uk-background-primary uk-flex uk-flex-between uk-flex-middle">
        <ul class="uk-width-1-6 uk-flex uk-flex-middle uk-flex-around uk-height-1-1 uk-margin-remove uk-padding-remove">
            <li><a href="" uk-icon="instagram"></a></li>
            <li><a href="" uk-icon="facebook"></a></li>
            <li><a href="" uk-icon="twitter"></a></li>
        </ul>
        <ul class="uk-width-1-3 uk-flex uk-flex-middle uk-flex-between uk-height-1-1 uk-margin-remove uk-padding-remove">
            <li>Manuel Simon</li>
            <li>Marcos Hogg</li>
            <li>Nicolas Yahni</li>
        </ul>
    </footer>

</body>

</html>